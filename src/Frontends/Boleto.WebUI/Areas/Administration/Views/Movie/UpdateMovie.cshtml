@model MovieViewModel

@{
    ViewData["Title"] = "UpdateMovie";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Film Listesi</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a class="text-muted text-hover-primary">Katalog</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Filmler</li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Film Listesi</li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Film Güncelle</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-xxl">
        <form method="post" enctype="multipart/form-data" id="form-update-movie" class="form d-flex flex-column flex-lg-row">
            <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Film Fotoğrafı</h2>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.MovieDetailResponse.MovieID" asp-for="UpdateMovieRequest.MovieID" />
                    <div class="card-body text-center pt-0">
                        <style>
                            .image-input-placeholder {
                                background-image: url('/assets-admin/media/svg/files/blank-image.svg');
                            }

                            [data-bs-theme="dark"] .image-input-placeholder {
                                background-image: url('/assets-admin/media/svg/files/blank-image-dark.svg');
                            }
                        </style>
                        <div class="image-input image-input-empty image-input-outline image-input-placeholder mb-3" data-kt-image-input="true">
                            <div class="image-input-wrapper w-150px h-150px" style="background-image: url('@Model.MovieDetailResponse.ImageURL')"></div>
                            <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Görsel Seç">
                                <i class="ki-duotone ki-pencil fs-7">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                <input type="file" asp-for="UpdateMovieRequest.ImageURL" />
                                <input type="hidden" name="avatar_remove" />
                            </label>
                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="Temizle">
                                <i class="ki-duotone ki-cross fs-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                            </span>
                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="Temizle">
                                <i class="ki-duotone ki-cross fs-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                            </span>
                        </div>
                        <div class="text-muted fs-7">Yalnızca *.png, *.jpg, *.webp ve *.jpeg uzantıları kabul edilir.</div>
                    </div>
                </div>
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Tür</h2>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <select class="form-select mb-2" asp-for="UpdateMovieRequest.Genre" data-control="select2" data-hide-search="true" data-placeholder="Film Türünü Seçiniz" data-allow-clear="true" multiple="multiple">
                            <option></option>
                            <option value="Dram" selected="@Model.MovieDetailResponse.Genre.Contains("Dram")">Dram</option>
                            <option value="Suç" selected="@Model.MovieDetailResponse.Genre.Contains("Suç")">Suç</option>
                            <option value="Komedi" selected="@Model.MovieDetailResponse.Genre.Contains("Komedi")">Komedi</option>
                            <option value="Aksiyon" selected="@Model.MovieDetailResponse.Genre.Contains("Aksiyon")">Aksiyon</option>
                            <option value="Gerilim" selected="@Model.MovieDetailResponse.Genre.Contains("Gerilim")">Gerilim</option>
                            <option value="Korku" selected="@Model.MovieDetailResponse.Genre.Contains("Korku")">Korku</option>
                            <option value="Bilim Kurgu" selected="@Model.MovieDetailResponse.Genre.Contains("Bilim Kurgu")">Bilim Kurgu</option>
                            <option value="Macera" selected="@Model.MovieDetailResponse.Genre.Contains("Macera")">Macera</option>
                        </select>
                        <div class="text-muted fs-7">Birden Fazla Seçim Yapabilirsiniz</div>
                    </div>
                </div>
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Dil</h2>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <select class="form-select mb-2" asp-for="UpdateMovieRequest.Language" data-control="select2" data-hide-search="true" data-placeholder="Dil Seçiniz" data-allow-clear="true" multiple="multiple">
                            <option></option>
                            <option value="Türkçe" selected="@Model.MovieDetailResponse.Language.Contains("Türkçe")">Türkçe</option>
                            <option value="İngilizce" selected="@Model.MovieDetailResponse.Language.Contains("İngilizce")">İngilizce</option>
                            <option value="Almanca" selected="@Model.MovieDetailResponse.Language.Contains("Almanca")">Almanca</option>
                            <option value="Fransızca" selected="@Model.MovieDetailResponse.Language.Contains("Fransızca")">Fransızca</option>
                            <option value="İspanyolca" selected="@Model.MovieDetailResponse.Language.Contains("İspanyolca")">İspanyolca</option>
                            <option value="İtalyanca" selected="@Model.MovieDetailResponse.Language.Contains("İtalyanca")">İtalyanca</option>
                            <option value="Rusça" selected="@Model.MovieDetailResponse.Language.Contains("Rusça")">Rusça</option>
                            <option value="Çince" selected="@Model.MovieDetailResponse.Language.Contains("Çince")">Çince</option>
                        </select>
                        <div class="text-muted fs-7">Birden Fazla Seçim Yapabilirsiniz</div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="kt_ecommerce_add_product_general">
                        <div class="d-flex flex-column gap-7 gap-lg-10">
                            <div class="card card-flush py-4">
                                <div class="card-header">
                                    <div class="card-title">
                                        <h2>Film Hakkında</h2>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Film Adı</label>
                                        <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.MovieName" asp-for="UpdateMovieRequest.MovieName" placeholder="Film Adı Giriniz" id="txt-movie-name" oninput="formatMovieName()" />
                                        <span class="text-danger" asp-validation-for="UpdateMovieRequest.MovieName"></span>
                                    </div>
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Film URL</label>
                                        <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.SlugURL" asp-for="UpdateMovieRequest.SlugURL" placeholder="Film URL Giriniz" id="txt-slug-url" oninput="formatSlugURL()" />
                                        <span class="text-danger" asp-validation-for="UpdateMovieRequest.SlugURL"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-flush py-4">
                                <div class="card-header">
                                    <div class="card-title">
                                        <h2>Film Detayları</h2>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="d-flex flex-wrap gap-5 mb-5">
                                        <div class="fv-row w-100 flex-md-root fv-plugins-icon-container">
                                            <label class="required form-label">Film Süresi</label>
                                            <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.Duration" asp-for="UpdateMovieRequest.Duration" placeholder="Film Süresini Giriniz" />
                                            <span class="text-danger" asp-validation-for="UpdateMovieRequest.Duration"></span>
                                        </div>
                                        <div class="fv-row w-100 flex-md-root">
                                            <label class="required form-label">Yayınlanma Tarihi</label>
                                            <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.ReleaseDate" asp-for="UpdateMovieRequest.ReleaseDate" placeholder="Yayınlanma Tarihini Giriniz" />
                                            <span class="text-danger" asp-validation-for="UpdateMovieRequest.ReleaseDate"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-wrap gap-5 mb-5">
                                        <div class="fv-row w-100 flex-md-root fv-plugins-icon-container">
                                            <label class="required form-label">IMDB Puanı</label>
                                            <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.Rating" asp-for="UpdateMovieRequest.Rating" placeholder="IMDB Puanı Giriniz" />
                                            <span class="text-danger" asp-validation-for="UpdateMovieRequest.Rating"></span>
                                        </div>
                                        <div class="fv-row w-100 flex-md-root">
                                            <label class="required form-label">İzleyici Puanı</label>
                                            <input type="text" class="form-control mb-2" value="@Model.MovieDetailResponse.AudienceScore" asp-for="UpdateMovieRequest.AudienceScore" placeholder="İzleyici Puanı Giriniz" />
                                            <span class="text-danger" asp-validation-for="UpdateMovieRequest.AudienceScore"></span>
                                        </div>
                                    </div>
                                    <div class="mb-5 fv-row">
                                        <label class="required form-label">Durum</label>
                                        <select class="form-select mb-2" asp-for="UpdateMovieRequest.IsActive" data-control="select2" data-hide-search="true" data-placeholder="Durum Seçiniz">
                                            <option value="true" selected="@(ViewBag.IsActive == true)">Aktif</option>
                                            <option value="false" selected="@(ViewBag.IsActive == false)">Pasif</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-controller="Movie" asp-action="Index" asp-area="Administration" class="btn btn-light me-5">İptal Et</a>
                    <button type="submit" class="btn btn-primary">
                        <span class="indicator-label">Güncelle</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function formatMovieName() {
            var input = document.getElementById('txt-movie-name');
            var words = input.value.split(' ');

            for (var i = 0; i < words.length; i++) {
                var word = words[i];
                if (word.length > 0) {
                    words[i] = word.charAt(0).toUpperCase() + word.slice(1);
                }
            }

            input.value = words.join(' ');
        }
    </script>

    <script>
        function formatSlugURL() {
            var input = document.getElementById('txt-slug-url');
            var value = input.value;

            value = value.toLowerCase();
            value = value.replace(/\s+/g, '-');

            value = value.replace(/[^a-z0-9-]/g, '');

            input.value = value;
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#form-update-movie").submit(function (e) {
                e.preventDefault();

                var formData = new FormData(this);

                let timerInterval;
                Swal.fire({
                    title: "Film Güncelleniyor...",
                    html: "Lütfen Bekleyiniz",
                    timerProgressBar: true,
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    didOpen: () => {
                        Swal.showLoading();

                        $.ajax({
                            type: "POST",
                            url: "/Administration/Movie/UpdateMovie",
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (response) {
                                toastr.success("Film Listesine Yönlendiriliyorsunuz...", "Film Güncellendi", {
                                    "progressBar": true,
                                    "positionClass": "toastr-top-right",
                                    "showDuration": "1000",
                                    "hideDuration": "1000",
                                    "timeOut": "1500",
                                    "extendedTimeOut": "1000",
                                });
                                setTimeout(function () {
                                    window.location.href = "/Administration/Movie/Index";
                                }, 1500);
                            },
                            error: function (xhr) {
                                var errors = xhr.responseJSON && xhr.responseJSON.error;

                                if (!errors) {
                                    var errorMessage = "Bir sorun oluştu. Lütfen daha sonra tekrar deneyin.";
                                    toastr.error("", errorMessage, {
                                        "positionClass": "toastr-top-right",
                                        "showDuration": "1000",
                                        "hideDuration": "1000",
                                        "timeOut": "2000",
                                        "extendedTimeOut": "1000"
                                    });
                                } else {
                                    showValidationErrors(errors);
                                }
                            },
                            complete: function () {
                                clearInterval(timerInterval);
                                Swal.close();
                            }
                        });
                    },
                    willClose: () => {
                        clearInterval(timerInterval)
                    }
                });
            });

            // Show Validation Errors
            function showValidationErrors(errors) {
                if (Array.isArray(errors) && errors.length > 0) {
                    errors.forEach((error) => {
                        toastr.error("", error, {
                            "positionClass": "toastr-top-right",
                            "showDuration": "1000",
                            "hideDuration": "1000",
                            "timeOut": "2000",
                            "extendedTimeOut": "1000"
                        });
                    });
                }
            }
        });
    </script>
}
